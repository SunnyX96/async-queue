{
    "compilerOptions": {
        "removeComments": false,
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "strict": true,
        "pretty": true,
        "outDir": "lib",
        "rootDir": "src",
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "newLine": "lf",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
    },
    "include": [
        "src/index.ts"
    ]
}
